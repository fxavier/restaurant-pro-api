<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Register custom converter for masking sensitive data -->
    <conversionRule conversionWord="maskedMsg" 
                    converterClass="com.restaurantpos.common.logging.MaskingMessageConverter" />
    
    <!-- Console appender with masking (for development) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %maskedMsg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File appender with masking (optional, for production) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/restaurant-pos.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/restaurant-pos.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %maskedMsg%n</pattern>
        </encoder>
    </appender>
    
    <!-- JSON appender with structured logging and MDC fields -->
    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- Include standard fields -->
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <includeStructuredArguments>true</includeStructuredArguments>
            <includeTags>true</includeTags>
            
            <!-- Custom application identifier -->
            <customFields>{"application":"restaurant-pos-saas"}</customFields>
            
            <!-- Field names configuration -->
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <version>[ignore]</version>
                <message>message</message>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>level</level>
                <levelValue>[ignore]</levelValue>
            </fieldNames>
            
            <!-- MDC fields will be included automatically: tenant_id, user_id, trace_id -->
            
            <!-- Message will be masked by our custom converter through the message provider -->
            <messageSplitRegex>\n</messageSplitRegex>
            
            <!-- Provider to apply masking to JSON messages -->
            <provider class="net.logstash.logback.composite.loggingevent.MessageJsonProvider">
                <messageSplitRegex>\n</messageSplitRegex>
            </provider>
        </encoder>
    </appender>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
    
    <!-- Application-specific loggers -->
    <logger name="com.restaurantpos" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <logger name="org.springframework.web" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <logger name="org.springframework.security" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- Profile-specific configurations -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="FILE" />
            <appender-ref ref="JSON" />
        </root>
        
        <logger name="com.restaurantpos" level="INFO" additivity="false">
            <appender-ref ref="JSON" />
        </logger>
    </springProfile>
    
    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE" />
        </root>
    </springProfile>
    
    <springProfile name="test">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
    </springProfile>
    
</configuration>
